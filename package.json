{
  "name": "codebase-visualizer",
  "version": "0.1.0",
  "description": "3D interactive codebase visualization with MCP integration for LLM-assisted code understanding",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "codebase-visualizer": "dist/cli.js"
  },
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "codebase",
    "visualizer",
    "3d",
    "code-map",
    "dependency-graph",
    "mcp",
    "typescript",
    "architecture",
    "code-analysis",
    "force-directed-graph"
  ],
  "author": "bntvllnt",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^12.0.0",
    "express": "^4.21.0",
    "graphology": "^0.25.4",
    "graphology-metrics": "^2.3.0",
    "graphology-shortest-path": "^2.1.0",
    "open": "^10.1.0",
    "typescript": "^5.7.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "@types/supertest": "^6.0.3",
    "eslint": "^10.0.0",
    "supertest": "^7.2.2",
    "typescript-eslint": "^8.56.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "public"
  ]
}
